| <a href="/dashboard/<%= @user.id %>">Go to Your Dashboard</a>

<div class="container">
  <h3>Hi, <%= @user.first_name %>!</h3>

  <h4>All Products</h4>
  <table>
    <tr>
      <th>Product</th>
      <th>Seller</th>
      <th>Date Posted</th>
      <th>Amount</th>
      <th>Action</th>
    </tr>

    <% @shoes.each do |shoe| %>
    <tr>
      <td><%= shoe.name %></td>
      <td><%= shoe.user.first_name %> <%= shoe.user.last_name %></td>
      <td><%= shoe.created_at %></td>
      <td>$<%= shoe.amount %></td>
      <td><a href="buys/<%= shoe.id %>">Buy</a></td>
    </tr>
    <% end %>


  </table>

</div>
